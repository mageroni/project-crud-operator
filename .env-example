# GitHub authentication
PROJECT_TOKEN=your_github_personal_access_token

# GitHub Project v2 ID (GraphQL node ID)
PROJECT_ID=your_project_id

# Operation to perform (getItem, createOrUpdate, removeItem)
OPERATION=getItem

# Primary key field name in the GitHub Project
PKEY=your_primary_key_field_name

# Value of primary key to lookup (required for getItem and removeItem operations)
PKEY_VALUE=your_primary_key_value

# JSON string representing the record (required for createOrUpdate operation)
# Example: {"field1":"value1","field2":"value2","your_primary_key_field_name":"primary_key_value"}
RECORD={"field1":"value1","field2":"value2"}